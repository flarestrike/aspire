{
  "extends": "../tslint.json",
  "rules": {
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case"],
    "directive-class-suffix": [true, "Attr"],
    "component-class-suffix": [true, "Tag"],
    "directive-selector": [true, "attribute", ["d", "dt"], "camelCase"],
    "component-selector": [true, "element", ["d", "dt"], "kebab-case"]
  }
}
